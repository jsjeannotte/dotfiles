# Personal favorites: roman, big, cyberlarge, doh, nancyj, starwars
function figletfavs() {
    for i in roman big cyberlarge doh nancyj starwars
    do 
        echo " "
        echo " "
        echo " "
        echo "$i:"
        echo " "
        figlet -f $i -w 200 $1
    done  
}


